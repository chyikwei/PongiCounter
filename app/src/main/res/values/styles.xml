<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextAppearance">@style/customActionBar</item>

    </style>

    <style name="customActionBar" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="RadioButtonLigtGreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorLightGreen</item>
        <item name="colorPrimary">@color/colorLightGreen</item>
    </style>

    <style name="DailogButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_color_selector</item>
    </style>

    <style name="EditTitleText">
        <item name="android:layout_marginLeft">@dimen/edit_h_margin</item>
        <item name="android:textSize">@dimen/edit_title_text_size</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="EditText">
        <item name="android:layout_marginLeft">@dimen/edit_h_margin</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="EditSectionLine">
        <item name="android:layout_marginLeft">@dimen/edit_h_margin</item>
        <item name="android:layout_marginRight">@dimen/edit_h_margin</item>
        <item name="android:background">@color/colorText</item>
    </style>

    <style name="ListSectionLine">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:background">@color/colorText</item>
        <item name="android:alpha">0.3</item>
    </style>

</resources>
